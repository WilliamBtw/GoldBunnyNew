<Page x:Class="GoldBunny.wind1s.MedCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoldBunny.wind1s"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="MedCardPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Row="1"
                      x:Name="LvMedCard"
                      SelectionChanged="LvMedCard_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100"
                                        Header="Номер медкарты"
                                        DisplayMemberBinding="{Binding IDMedcard}"/>
                    <GridViewColumn Width="100"
                                        Header="Номер диагноза"
                                        DisplayMemberBinding="{Binding DiagnosisID}"/>
                    <GridViewColumn Width="150"
                                        Header="Начало болезни"
                                        DisplayMemberBinding="{Binding StartIlness}"/>
                    <GridViewColumn Width="100"
                                        Header="Конец болезни"
                                        DisplayMemberBinding="{Binding EndIlness}"/>
                    <GridViewColumn Width="100"
                                        Header="Номер рецептного листа"
                                        DisplayMemberBinding="{Binding RecipeListID}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <WrapPanel Grid.Row="3" Margin="150,10,0,0">
            <Button x:Name="Add"
                    Margin="0,0,20,0"
                Height="20"
                Width="100"
                Content="Добавить"
                Grid.Row="3"
                Style="{StaticResource ButOne}"
                Click="Add_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="100" Height="25"
                                    CornerRadius="8"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="Edit"
                Height="20"
                Width="100"
                Content="Изменить"
                Grid.Row="3"
                Style="{StaticResource ButOne}"
                Click="Edit_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="100" Height="25"
                                    CornerRadius="8"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="Delete"
                    Margin="20,0,0,0"
                    Height="20"
                    Width="100"
                    Content="Удалить"
                    Grid.Row="3"
                    Style="{StaticResource ButOne}"
                    Click="Delete_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="100" Height="25"
                                    CornerRadius="8"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </WrapPanel>
    </Grid>
</Page>
